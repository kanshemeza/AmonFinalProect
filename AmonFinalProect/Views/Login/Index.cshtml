@model AmonFinalProect.Models.LoginModel
@{
    ViewData["Title"] = "Index";
}

<h2>Login</h2>
<div asp-validation-summary="All"></div>
<form asp-action="index" asp-controller="login" method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Username/Email address</label>
            <input type="text" class="form-control" name="username" required />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <input type="submit" class="form-control btn btn-info" value="Login" />
        </div>
    </div>
</form>
<a asp-action="ForgotPassword">Forgot your Password? Reset it!</a>

