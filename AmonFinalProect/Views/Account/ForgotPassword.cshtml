
@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="centered-form">
    <h2>Reset Password</h2>
    <p class="pcenter">Provide your email address and we'll help you create a new password</p>
</div>
<div class="form-div">
    
    <form method="post">
        <div class="form-group col-md-4 offset-md-4">
            <label for="email">Email address</label>
            <input type="email" placeholder="Enter email" name="password" class="form-control" required />

        </div>

        <div class="form-group col-md-4 offset-md-4">            
            <input type="submit" value="Submit" class="btn btn-info" />
        </div>
    </form>
    </div>

