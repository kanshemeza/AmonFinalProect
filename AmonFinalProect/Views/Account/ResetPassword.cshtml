
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="signup-container">
    <h2>ResetPassword</h2>
    <p class="mb-0">Provide your email address and we'll help you create a new password</p>
    <div class="wfm-form">
        <form method="post">
            <label for="email">Enter your new password</label>
            <input type="password" name="password" required />
            <input type="submit" value="Reset your password" class="btn btn-info" />
        </form>
    </div>
</div>

